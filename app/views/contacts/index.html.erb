
<div class="span-24 below-header">
<h2 class="left">Contacts</h2><%= link_to 'New Contact', new_contact_path, :class => 'new_button round' %>
</div>


<table id="contacts_table" class="tablesorter" >
  
  <thead>
	  <tr>
	  	<th></th>
	  	<th></th>
	    <th>First Name</th>
	    <th>Last Name</th>
	    <th>Phone #</th>
	    <th>Email</th>
	    <th>Address 1</th>
	    <th>Address 2</th>
	    <th>Contact Type</th>
	    <th>Role</th>
	    <th>Manager</th> 
	    <th></th>
	  </tr>
  </thead>

  <tbody>
	<% @contacts.each do |contact| %>
	  <tr>
	  	<td><%= link_to image_tag('binoculars.png', :size => '16x16', :class => 'table_button small_round', :alt => 'View Details'), contact %></td>
	  	<td><%= link_to image_tag('edit_pen_blue.png', :id => 'blue_pencil', :class => 'table_button small_round', :size => '16x16',  :alt => 'Edit'), edit_contact_path(contact) %></td>
	    <td><%= contact.first_name %></td>
	    <td><%= contact.last_name %></td>
	    <td><%= contact.phone_num %></td>
	    <td><%= contact.email %></td>
	    <td><%= contact.address1 %></td>
	    <td><%= contact.address2 %></td>
	    <td><%= contact.contact_type %></td>
	    <td><%= contact.role %></td>
	    <td><%= contact.manager %></td>   
	    <td><%= link_to image_tag('delete_x.png', :size => '16x16', :class => 'table_button small_round'), contact, :confirm => 'Are you sure?', :method => :delete %></td>
	  </tr>
	  
	<% end %>
  </tbody>
</table>

<%= paginate @contacts %>

<br />


