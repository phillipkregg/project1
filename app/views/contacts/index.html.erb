
<div class="span-24 below-header">
<h2 class="left push-1">Contacts</h2><%= link_to 'New Contact', new_contact_path, :remote => true, :class => 'new_button round span-4 pull-1' %>
</div>


<table id="contacts_table" class="tablesorter" >
  
  <thead>
	  <tr>
	  	<th></th>
	  	<th></th>
	    <th>First Name</th>
	    <th>Last Name</th>
	    <th>Phone #</th>
	    <th>Email</th>
	    <th>Address 1</th>
	    <th>Address 2</th>
	    <th>Contact Type</th>
	    <th>Role</th>
	    <th>Manager</th> 
	    <th></th>
	  </tr>
  </thead>

  <tbody>
	<% @contacts.each do |contact| %>
	  <tr>
	  	<td><%= link_to image_tag('binoculars.png', :size => '16x16', :class => 'table_button small_round', :alt => 'View Details'), contact %></td>
	  	<td><%= link_to image_tag('edit_pen_blue.png',:contact_type_id => :contact_type_id, :class => 'table_button small_round', :size => '16x16',  :alt => 'Edit'), edit_contact_path(contact), :remote => true %></td>
	    <td><%= contact.first_name %></td>
	    <td><%= contact.last_name %></td>
	    <td><%= contact.phone_num %></td>
	    <td><%= contact.email %></td>
	    <td><%= contact.address1 %></td>
	    <td><%= contact.address2 %></td>
	    <td><%= contact.contact_type %></td>
	    <td><%= contact.role %></td>
	    <td><%= contact.manager %></td>   
	    <td><%= link_to image_tag('delete_x.png', :size => '16x16', :class => 'table_button small_round'), contact, :confirm => 'Are you sure?', :method => :delete %></td>
	  </tr>
	  
	<% end %>
  </tbody>
</table>





<div class="push-1">
	<%= paginate @contacts %>
</div>

<br />

